.chat-header.w-100.flex-grow-1.sticky-top.bg-white.radius-right-top-16
  +block('Вениамин Редакторович', '../images/avatar_4.jpg', 'Онлайн')(class="shadow-none border-bottom mt-none")
.chat-dialog.d-flex.flex-column.p-5.w-100.h-100
  -
    var messages = [
      {
        avatar: "/images/avatar_4.jpg",
        name: "Вениамин Редакторович",
        text: "Да, я уже вышел и минут через 20-30 буду у тебя. Поеду на трамвае и потом в магазин. Тебе что-то захватить?",
        time: "8 минут назад"
      },
      {
        avatar: "/images/avatar_1.jpg",
        text: "Захвати мне колы и пару печенек. Как-то очень сладкого хочется, а в магазин идти лень",
        time: "5 минут назад"
      },
      {
        avatar: "/images/avatar_4.jpg",
        name: "Вениамин Редакторович",
        text: "Лады",
        time: "5 минут назад"
      },
      {
        avatar: "/images/avatar_1.jpg",
        text: "А, слушай, купи мне ещё Macbook Pro. А то хочется работать в Хекслете, а там это условие",
        time: "3 минуты назад"
      },
      {
        avatar: "/images/avatar_4.jpg",
        name: "Вениамин Редакторович",
        text: "о_О",
        time: "Только что"
      },
    ]
  each message in messages
    if message.name
      div.d-flex.justify-content-start.align-items-end.mb-3.w-100
        +message(message.avatar, message.name, message.text, message.time)
    else 
      div.d-flex.justify-content-end.align-items-end.mb-3.w-100
        +message(message.avatar, message.name, message.text, message.time)
.chat-message.mx-5.p-2.border-top.sticky-top
  input-group.d-flex(action="/")
      input.form-control.border-top-0.border-end-0.border-start-0.border-bottom-0.bg-white.shadow-none.bg-white(type="search", placeholder="Напишите сообщение...")
      button.btn.btn-primary.radius-50.w-50p.h-50p(type="button")
        +icon('cursor')