mixin icon(name)
  svg.icon(fill='inherit')
    use(xlink:href='../images/stack/sprite.svg#' + name)

mixin badge(name)
  svg.badge.p-0.icon-small(fill='inherit')
    use(xlink:href='../images/stack/sprite.svg#' + name)

mixin block(name, avatar, text, time)
  a.block.d-flex.align-items-center.mt-3.ps-3.pt-4.pe-5.shadow-sm.text-decoration-none
    img.avatar(src=avatar).me-4.radius
    span.d-flex.flex-column.overflow-hidden.w-100
      span.block-name.d-flex= name
        if time 
          span.block-time= time
      if text
        span.block-text= text