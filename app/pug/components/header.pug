.header.bg-primary.d-flex.justify-content-end.align-items-center.rounded-tl
  a(href="#").mr-auto
    +icon('logo')
  ul.nav.nav-pills(id="pills-tab", role="tablist")
    li.nav-item
      a.nav-link.active.text-white(id="pills-contacts-tab", data-toggle="pill", href="#pills-contacts", role="tab", aria-controls="pills-contacts", aria-selected="true") 
        +icon('people') 
        span.ml-2.small Контакты
    li.nav-item
      a.nav-link.text-white(id="pills-chat-tab", data-toggle="pill", href="#pills-chat", role="tab", aria-controls="pills-chat", aria-selected="false")
        +icon('chat') 
        span.ml-2.small Сообщения
    li.nav-item
      a.nav-link.text-white(id="pills-profile-tab", data-toggle="pill", href="#pills-profile", role="tab", aria-controls="pills-profile", aria-selected="false")
        +icon('person')
        span.ml-2.small Профиль
.work-panel.tab-content.pt-5.px-4(id="pills-tabContent")
  .tab-pane.fade.show.active(id="pills-contacts", role="tabpanel", aria-labelledby="pills-contacts-tab")
    h2.mb-4.font-weight-bold Контакты
    form(action="/")
      input.form-control.my-3.pl-4.pb-3.border-top-0.border-right-0.border-bottom.border-left-0.shadow-none(type="search", placeholder="Поиск по контактам")
    include ./contacts.pug
  .tab-pane.fade(id="pills-chat", role="tabpanel", aria-labelledby="pills-chat-tab")
    h2.mb-4.font-weight-bold Чаты
    form.my-3(action="/")
      input.form-control.my-3.pl-4.border-top-0.border-right-0.border-bottom.border-left-0.shadow-none(type="search", placeholder="Поиск по сообщениям")
    include ./messages.pug
  .tab-pane.fade(id="pills-profile", role="tabpanel", aria-labelledby="pills-profile-tab")
    h2.mb-4.font-weight-bold Профиль
    form.my-3(action="/")
      input.form-control.my-3.pl-4.border-top-0.border-right-0.border-bottom.border-left-0.shadow-none(type="search", placeholder="Поиск по сообщениям")