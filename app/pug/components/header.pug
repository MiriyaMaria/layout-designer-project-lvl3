- classTabContacts = currentSection === 'welcome' ? 'tab-pane fade show active h-100  py-5 px-4' : 'tab-pane fade py-5 px-4'
- classTabChat = currentSection === 'chat' ? 'tab-pane fade show active h-100  py-5 px-4' : 'tab-pane fade py-5 px-4'

.header.bg-primary.d-flex.justify-content-end.align-items-center.radius-left-top-md.order-2.order-md-1
  a.me-auto(href="/")
    +icon('logo')
  nav
    ul.nav.nav-tabs.border-0(id="nav-tab", role="tablist")
      if currentSection === 'chat'
        li.nav-item.d-flex.d-md-none.flex-nowrap(role="presentation")
          a.nav-link.text-white.d-flex.align-content-center.border-0.bg-transparent.justify-content-between(href="#current-chat", data-bs-toggle="tab", data-bs-target="#message", type="button", role="tab", aria-controls="message", aria-selected="true") 
            +icon('chat-left-text')
      li.nav-item.d-flex.flex-nowrap(role="presentation")
        a.nav-link.text-white.d-flex.align-content-center.border-0.bg-transparent.justify-content-between(href="#contacts", data-bs-toggle="tab", data-bs-target="#contacts", type="button", role="tab", aria-controls="contacts", aria-selected="true") 
          +icon('people') 
          span.d-none.d-md-inline.ms-2.small Контакты
      li.nav-item.d-flex.flex-nowrap(role="presentation")
        a.nav-link.text-white.d-flex.align-content-center.border-0.bg-transparent(href="#chats", data-bs-toggle="tab", data-bs-target="#chat", type="button", role="tab", aria-controls="chat", aria-selected="false")
          +icon('chat') 
          span.d-none.d-md-inline.ms-2.small Сообщения
      li.nav-item.d-flex.flex-nowrap(role="presentation")
        a.nav-link.text-white.d-flex.align-content-center.border-0.bg-transparent(href="#profile", data-bs-toggle="tab", data-bs-target="#profile", type="button", role="tab", aria-controls="profile", aria-selected="false")
          +icon('person')
          span.d-none.d-md-inline.ms-2.small Профиль
.tab-content.h-100.order-1.order-md-2.hide-scrollbar(id="nav-tabContent")
  div.tab-pane.fade(id="message", role="tabpanel", aria-labelledby="message-tab")
    include ./active-chat.pug
  div(id="contacts", role="tabpanel", aria-labelledby="contacts-tab", class=classTabContacts)
    h2.mb-4.fw-bold.lh-1 Контакты
    form.mb-5(action="/")
      input.form-control.p-4.border-top-0.border-end-0.border-bottom.border-start-0.bg-white.shadow-none(type="search", placeholder="Поиск по контактам")
    include ./contacts.pug
  div(id="chat", role="tabpanel", aria-labelledby="chat-tab", class=classTabChat)
    h2.mb-4.fw-bold.lh-1 Чаты
    form.mb-5(action="/")
      input.form-control.p-4.border-top-0.border-end-0.border-bottom.border-start-0.bg-white.shadow-none(type="search", placeholder="Поиск по сообщениям")
    include ./messages.pug
  div.h-100.tab-pane.fade.py-5.px-4(id="profile", role="tabpanel", aria-labelledby="profile-tab")
    h2.mb-4.fw-bold.lh-1 Профиль
    form.mb-5(action="/")
      input.form-control.p-4.border-top-0.border-end-0.border-bottom.border-start-0.bg-white.shadow-none(type="search", placeholder="Поиск по сообщениям")
    include ./profile.pug